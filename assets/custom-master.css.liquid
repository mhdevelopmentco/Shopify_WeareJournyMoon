#newsletter-popup {
  background: #fff none repeat scroll 0 0;
  display: table;
  margin: 20px auto;
  max-width: 450px;
  padding: 35px;
  text-align: center;
  width: 100%;
}

#newsletter-popup .mfp-close {
  color: #555;
  font-size: 19px;
  height: auto;
  line-height: 15px;
  margin: 0;
  padding: 0;
  position: absolute;
  right: 10px;
  text-align: center;
  top: 10px;
  width: auto;
}

#newsletter-popup .action_button.sign_up {
  background: #000 none repeat scroll 0 0;
  border: medium none;
  color: #fff;
  font-size: 13px;
  height: 45px;
  letter-spacing: 0.1em;
  padding: 10px 20px;
  text-transform: uppercase;
  width: 100%;
}

#newsletter-popup .action_button.sign_up:hover, #newsletter-popup .action_button.sign_up:focus{
  background: #555; 
}


#newsletter-popup input[type="email"] {
  background: #dedede none repeat scroll 0 0;
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  border: 1px solid #000;
  color: #000;
  height: 45px;
  line-height: 17px;
  margin: 0 0 20px;
  padding: 10px;
}

#newsletter-popup .popup-header {
  background: #000 none repeat scroll 0 0;
  color: #fff;
  display: inline-block;
  margin: 0 0 20px;
  padding: 25px 20px;
  width: 100%;
}

#newsletter-popup .newsletter {
  display: inline-block;
  width: 100%;
}

#newsletter-popup .newsletter p {
  color: #ff0000;
  display: block;
  float: left;
  line-height: 19px;
  margin: 0 0 8px;
  padding: 0;
  text-align: left;
  width: 100%;
}

#newsletter-popup label {
  display: inline-block;
  font-size: 11px;
  line-height: 13px;
  text-align: left;
  text-transform: uppercase;
  width: 100%;
}

#newsletter-popup h2 {
  font-size: 23px;
  line-height: 25px;
  margin: 0 0 10px;
  text-transform: uppercase;
}

#newsletter-popup h4 {
  font-size: 13px;
  font-weight: normal;
  line-height: 19px;
  margin: 0;
  text-transform: uppercase;
}

#newsletter-popup form{
  margin: 0;
}

#featured-post {
  margin-top: -30px;
}

#featured-post .featured-hero {
  background-attachment: scroll;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 550px;
  position: relative;
  width: 100%;
}

#featured-post .featured-hero::after {
  background: #fff none repeat scroll 0 0;
  content: "";
  height: 100%;
  left: 0;
  opacity: 0.3;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;
}

#featured-post .middle-content{
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  z-index: 2;
  text-align: center;
  width: 100%;
  max-width: 90%;
}

#featured-post .middle-content h3 {
  font-size: 35px;
  line-height: 35px;
  margin: 0 0 10px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

#featured-post .middle-content h4 {
  display: inline-block;
  font-size: 11px;
  letter-spacing: 0.1em;
  line-height: 10px;
  margin: 0;
  text-transform: uppercase;
  width: 100%;
}

#featured-post .middle-content a {
  display: inline-block;
  font-size: 12px;
  font-weight: bold;
  letter-spacing: 0.15em;
  line-height: 10px;
  margin: 0 auto 10px;
  text-align: center;
  text-transform: uppercase;
  width: 100%;
}

#featured-post .featured-hero button {
  background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
  font-size: 50px;
  color: #fff;
  padding: 0;
  margin: 0;
  left: 50%;
  position: absolute;
  bottom: 50px;
  -webkit-transform: translate(-50%, 0%);
  -moz-transform: translate(-50%, 0%);
  -o-transform: translate(-50%, 0%);
  -ms-transform: translate(-50%, 0%);
  transform: translate(-50%, 0%);

  z-index: 6;
}


#featured-post .featured-hero a{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.blog-title h1 {
  font-size: 29px;
  letter-spacing: 0.2em;
  margin: 15px 0 0;
  padding: 15px 0 0;
  text-align: center;
  text-transform: uppercase;
}

.template-blog .articles {
  display: table;
  float: none;
  margin: 0 auto 15px;
  max-width: 1300px;
  width: 100%;
}

.template-blog .articles .article .featured-image img{
  width: 100%;
}

.template-blog .articles .article .featured-image {
  margin: 0 0 10px;
  max-height: 260px;
  overflow: hidden;
  position: relative;
}

.template-blog .articles .article .article-title {
  font-size: 13px;
  letter-spacing: 0.1em;
  margin: 0 0 10px;
  text-transform: uppercase;
}

.template-blog .articles .article .featured-image .middle-content{
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  z-index: 2;
  text-align: center;
  width: 100%;
  max-width: 90%;
}

.template-blog .articles .article .featured-image .middle-content h3 {
  font-size: 23px;
  letter-spacing: 0.2em;
  line-height: 23px;
  margin: 0 0 5px;
}

.template-blog .articles .article .featured-image:after {
  background: #fff none repeat scroll 0 0;
  content: "";
  height: 100%;
  left: 0;
  opacity: 0.4;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 1;
}

h3.ui-accordion-header {
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  cursor: pointer;
  font-weight: 400;
  height: 35px;
  line-height: 34px;
  margin: 0 0 -1px;
  outline: medium none !important;
  position: relative;
}

.ui-accordion-content{
  padding: 10px 0; 
  font-size: 12px;
  font-weight: bold;
}

#accordion{
  margin: 20px 0 10px; 
}

.accordion-icon{
  background-image: url({{ "accordion-icon.png" | asset_url }});
  background-repeat: no-repeat;
  display: inline-block;
  height: 9px;
  position: absolute;
  right: 0;
  top: 50%;
  width: 17px;
  -webkit-transform: translate(0%, -50%);
  -moz-transform: translate(0%, -50%);
  -o-transform: translate(0%, -50%);
  -ms-transform: translate(0%, -50%);
  transform: translate(0%, -50%);

}

.accordion-down{
  background-position: center top;
}


.accordion-up {
  background-position: center bottom;
}

.product-container{

}

.product-container .large-3{
  max-width: 400px; 
  width: 100%;
}

.product-detail-header {
  display: table;
  margin: 0 0 10px;
  width: 100%;
}

.product-detail-header > * {
  display: table-cell;
  vertical-align: top;
}

.product-detail-header h1.page-title {
  font-size: 20px;
  font-weight: normal;
  line-height: 24px;
}

.product-detail-header .prices {
  font-weight: bold;
  min-width: 100px;
  text-align: right;
  vertical-align: top;

}

.template-product article .prices .actual-price{
  font-size: 20px;
  font-weight: normal;
  line-height: 30px;
}

.template-product article .add-to-cart .button.btn-submit {
  background: #000 none repeat scroll 0 0;
  border: 1px solid #000;
  color: #fff;
  cursor: pointer;
  font-size: 12px;
  height: 38px;
  letter-spacing: 2px;
  line-height: 36px;
  text-align: center;
  text-transform: uppercase;
  width: 100%;
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  padding: 0;
  font-weight: normal;

}

.template-product article .add-to-cart .button.btn-submit:hover{
  background: #fff;
  color: #000;
}

.template-product article .quantity {
  display: table;
  float: left;
  margin-right: 22px;
  vertical-align: middle;
  width: 100%;
}

.template-product article .quantity label {
  display: table-cell;
  float: none;
  margin: 0;
  text-align: left;
  vertical-align: middle;
}
.template-product article .quantity #quantity {
  display: table-cell;
  float: right;
  margin: 0;
  text-align: center;
  vertical-align: middle;
  width: 100px;
}


.product-detail-vendor h3 {
  font-size: 14px;
  font-weight: normal;
  line-height: 14px;
  margin: 0 0 10px;
  text-transform: uppercase;
}

.main-header .mobile-tools {
  display: none;
  padding: 0 15px;
  vertical-align: middle;
  width: 100%;
}

.main-header .mobile-tools > * {
  display: table-cell;
  vertical-align: middle;
  width: auto;
}

.main-header .mobile-tools > .mobile-logo {
  padding: 0 20px;
}
.main-header .mobile-logo h1.title, .main-header .mobile-logo h1.title a {
  bottom: 0;
  display: table;
  line-height: 100%;
  margin: 0;
  position: relative;
  text-align: center;
  top: 0;
  vertical-align: middle;
  width: 100%;
}

.main-header .mobile-menu .nav-item a{
  padding-left: 0;
  padding-right: 0;
}

@media screen and (max-width: 1200px){
  .product-container .large-3 {
    max-width: 400px;
    width: 33.3333%;
  }
}



@media screen and (max-width: 992px){

  #featured-post .featured-hero{
    height: 400px; 
  }


}

@media screen and (max-width: 767px){
  .main-header .mobile-tools{
    display: table; 
  }

  .main-header .top.row{
    display: none; 
  }

  .main-header {
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
  }

  .main-header h1.title img {
    margin-top: -5px;
    max-height: 18px;
  }

  body{
    padding-top: 50px;
  }

  .main-header .bottom-row{
    padding: 15px 0; 
  }

  #featured-post .featured-hero{
    height: 300px; 
  }

  .blog-title h1{
    font-size: 19px; 
  }

  .product-container .large-3 {
    max-width: 100%;
    width: 100%;
  }

  .product-detail-header {
    margin: 0 0 10px;
  }


}
@media screen and (max-width: 1279px){
  .template-blog .articles .article .featured-image {
    margin: 0 0 10px;
    max-height: 190px!important;
    overflow: hidden;
    position: relative;
  }
}
@media screen and (max-width: 1360px){
  .template-blog .articles .article .featured-image {
    margin: 0 0 10px;
    max-height: 220px;
    overflow: hidden;
    position: relative;
  }
}
@media screen and (max-width: 639px){
  .template-blog .articles .article .featured-image .middle-content h3{
    font-size: 17px; 
  }


}

@media screen and (max-width: 479px){
  .template-blog .main-content {
    padding-top: 0;
  }

  #featured-post{

  }

  #featured-post .featured-hero{
    height: 280px; 
  }

  #featured-post .featured-hero button{
    bottom: 20px; 
  }


}